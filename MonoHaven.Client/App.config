<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <section name="nlog" type="NLog.Config.ConfigSectionHandler, NLog"/>
  </configSections>
  <nlog>
    <variable name="layout" value="${longdate} [${level}] ${message}"/>
    <targets async="true">
      <target name="file" type="File" layout="${layout}" fileName="Logs/client.txt" />
    </targets>
    <rules>
      <logger name="*" minlevel="Info" writeTo="file" />
    </rules>
  </nlog>
</configuration>